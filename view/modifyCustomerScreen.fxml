<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="290.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.modifyCustomerScreenController">
    <children>
        <VBox prefHeight="290.0" prefWidth="400.0">
            <children>
                <Label text="Modify customer">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="103.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Label text="ID:">
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="modifyCustomerIDTxt" disable="true">
                    <VBox.margin>
                        <Insets left="170.0" right="20.0" top="-25.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="modifyCustomerNameTxt">
                    <VBox.margin>
                        <Insets left="170.0" right="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Name:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="modifyCustomerAddressTxt">
                    <VBox.margin>
                        <Insets left="170.0" right="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Address:">
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="modifyCustomerContactPhone">
                    <VBox.margin>
                        <Insets left="170.0" right="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Contact phone:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="modifyCustomerCountry" onAction="#onActionModifyCountry" prefWidth="210.0">
                    <VBox.margin>
                        <Insets left="170.0" />
                    </VBox.margin>
                </ComboBox>
                <Label text="Country:">
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <ComboBox fx:id="modifyCustomerState" prefWidth="210.0">
                    <VBox.margin>
                        <Insets left="170.0" />
                    </VBox.margin>
                </ComboBox>
                <Label text="State/Providence:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="modifyCustomerPostalCodeTxt">
                    <VBox.margin>
                        <Insets left="170.0" right="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Postal code:">
                    <VBox.margin>
                        <Insets left="20.0" top="-25.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="modifyCustomerCancelBtn" mnemonicParsing="false" onAction="#onActionCancelModifyCustomer" text="Cancel">
                    <VBox.margin>
                        <Insets left="300.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button fx:id="modifyCustomerSaveBtn" mnemonicParsing="false" onAction="#onActionSaveModifiedCustomer" text="Save">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="-39.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
